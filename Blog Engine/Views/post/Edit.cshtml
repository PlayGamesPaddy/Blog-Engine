@model Blog_Engine.Models.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
@using (Html.BeginForm()) 
{
    <form asp-action="Add">
        <div class="container">
        <div class="row">
            <div class="col">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="w-15 p-3 float-end">
                <label asp-for="Title" class="control-label float-end">Title</label>
            </div>
            <div class="w-15 p-3">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control w-100" } })
            </div>
            <div class="w-25 p-3">
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="w-15 p-3">
                <label asp-for="Category" class="control-label">Category</label>
            </div>
            <div class="w-15 p-3">
                @Html.DropDownListFor(model => model.CategoryId, (IEnumerable<SelectListItem>)ViewBag.Categories, "Please select a Category")
            </div>
            <div class="w-15 p-3">
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="w-15 p-3">
                <label asp-for="Date" class="control-label">Pub Date</label>
            </div>
            <div class="w-15 p-3">
                @Html.EditorFor(model => model.publicationDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="w-15 p-3">
                @Html.ValidationMessageFor(model => model.publicationDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="w-15 p-3">
                <label asp-for="Content" class="control-label">Content</label>
            </div>
            <div class="w-15 p-3">
                
            </div>
            <div class="w-15 p-3">
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col ">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>
        
        <br>
        <div class="form-group col-md-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        </div>
    </form>
}
